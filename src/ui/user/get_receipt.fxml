<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ui.user.GetReceiptController"
      alignment="CENTER" spacing="15" style="-fx-background-color: #f8f9fa;" prefWidth="400" prefHeight="300">

    <Label text="Get Receipt" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Car Number:" />
        <TextField fx:id="carNoField" promptText="Enter your car number" />
    </HBox>

    <Button text="Fetch Receipt" onAction="#fetchReceipt" style="-fx-background-color: #0d6efd; -fx-text-fill: white;" />

    <TextArea fx:id="receiptArea" editable="false" prefWidth="350" prefHeight="150" />

</VBox>
